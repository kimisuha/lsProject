    // location file adding to page
    script
        include ./Js/Login.js


    style
        include ./Css/Login.css

.container
    .row
        .col-12
            h2.card-title.text-capitalize.text-center sign in
    .row.sign-in
        form(action="http://localhost:5000/test" method="post")#sign-in-form
            .form-group.sign-in-item
                label(for='username') user name
                input#username.form-control(type='text' placeholder='user name' name='username' autocomplete='username')
            .form-group.sign-in-item
                label(for='email') email
                input#email.form-control(type='email' placeholder='youremail@gmail.com' name='email')
            .form-group.sign-in-item
                label(for='password') password
                input#password.form-control(type='password' placeholder='password' name='password' autocomplete='current-password')
            .form-group.d-lg-flex.d-md-flex.justify-content-lg-between.justify-content-md-between
                a(href='http://localhost:5000/user')
                    p.text-left sign up
                a(href='http://localhost:5000/forgotpass')
                    p.text-right forgot password
            .form-group
                a(href='Dashboard.html')
                    button#signin-form-submit.btn.btn-success.form-control.text-capitalize(type='submit') login
