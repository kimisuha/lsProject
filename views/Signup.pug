  style
    include ./Css/Login.css
    script
        include ./Js/Signup.js
    
  
.container
  .row
    .col-12
      h2.card-title.text-capitalize.text-center sign up
  .row
    form#signup-form
      .form-group
        label(for='username') user name
        input#username.form-control(type='text' placeholder='user name' name='username' autocomplete='nickname')
      .form-group
        label(for='email') email
        input#email.form-control(type='email' placeholder='youremail@gmail.com' name='email' autocomplete='email')
      .form-group
        label(for='password') password
        input#password.form-control(type='password' placeholder='password' name='password' autocomplete='new-password')
      .form-group
        label(for='confirm-password') confirm-password
        input#confirm.form-control(type='password' placeholder='confirm-password' name='confirm' autocomplete='new-password')
      .form-group
        a(href='Login.html')
          p.text-right sign in
      .form-group
        a(href='SignupAttention.html')
          button.btn.btn-success.form-control.text-capitalize(type='submit') Signup
