.container
    .row.profile-head
        .col-1
            a(href='http://localhost:5000/dashboard')
                i.bi.bi-arrow-left-circle
        .col-11.text-center.profile-avata
            img.img-fluid(src='http://creativeedtech.weebly.com/uploads/4/1/6/3/41634549/published/avatar.png?1487742111' alt='test')
            h1.mt-3 your name
    .row.profile-body.d-block
        h1.ml-4 infomation
        form#profileForm
            .form-group.col-12
                label.form-label.ml-1(for='email') email
                input#em.form-control(type='text' name='email' disabled='' value= info.email)
            .form-group.col-12
                label.form-label.ml-1(for='user-name') user name
                input#user-name.form-control(type='text' name='username'  disabled='' value= info.name)
            .form-group.col-12
                label.form-label.ml-1(for='birth') birth
                input#birth.form-control(type='date' name='birth' disabled='' value= info.datebirth)
            .form-group.col-12
                label.form-label.ml-1(for='password') password
                input#password.form-control(type='password' name='password' disabled='' value= info.password)
            .form-group.col-12.text-center
                button#save.btn.btn-primary.text-capitalize(type='submit') done
                button#infoChange.btn.btn-warning.text-white.text-capitalize(type='button') change
